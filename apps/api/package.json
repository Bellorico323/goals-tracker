    "drizzle-kit": "^0.23.1"
  },
  "prettier": "@goals/prettier",
  "eslintConfig": {
    "extends": [
      "@goals/eslint-config/node"
    ]
  },
  "dependencies": {
    "@fastify/cookie": "^9.3.1",
    "@fastify/cors": "^9.0.1",
    "@fastify/jwt": "^8.0.1",
    "@fastify/swagger": "^8.15.0",
    "@fastify/swagger-ui": "^4.0.1",
    "@neondatabase/serverless": "^0.9.4",
